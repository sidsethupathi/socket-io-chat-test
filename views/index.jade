html(ng-app='myApp')
	head
		script(src="/socket.io/socket.io.js")
		script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.21/angular.min.js")
		script(src="http://code.jquery.com/jquery-1.11.1.js")
		script(type="text/javascript", src="js/app.js")
		link(rel="stylesheet" type="text/css" href="css/styles.css")
	body
		div(ng-controller='ChatCtrl')
			.col
				h3 Messages
					.overflowable
						p(ng-repeat='message in messages') {{message.name}}: {{message.body}} 

			.col
				h3 Users
					.overflowable
						p(ng-repeat='user in users track by $index') {{user}}

			.clr
				h3 Change your name
					p Your current user name is {{currentName}}
					form(ng-submit='changeName()')
						input(ng-model='newName')
						input(type='submit', value='Change Name')
			.clr
				form(ng-submit='sendMessage()')
					| Message: 
					input(size='60', ng-model='message')
					input(type='submit', value='Send')